font_size                   10.0
modify_font cell_height     -1px
modify_font cell_width      100%

disable_ligatures           cursor

# Copying
copy_on_select              yes
strip_trailing_spaces       smart

# Window
window_padding_width        4
remember_window_size        no
initial_window_width        800
initial_window_height       500
dynamic_background_opacity  yes
hide_window_decorations     yes

# Confirmation window on close
confirm_os_window_close     0

# Tabs
tab_bar_min_tabs            1
tab_bar_style               powerline
tab_powerline_style         slanted
tab_bar_edge                top

# Eye candy
cursor_trail                2
cursor_trail_decay          0.1 0.3

# Remote Control / Scripting
allow_remote_control        yes
listen_on unix:/tmp/mykitty

# Mappings
map f11 toggle_fullscreen
map ctrl+enter toggle_fullscreen
map ctrl+left neighboring_window left
map ctrl+right neighboring_window right
map ctrl+up neighboring_window up
map ctrl+down neighboring_window down
map alt+left move_window left
map alt+down move_window down
map alt+up move_window up
map alt+right move_window right
map ctrl+0 change_font_size all 0

# Open kitty config file in default editor with Ctrl + ,
map ctrl+, edit_config_file

# Reload kitty config with Ctrl + Shift + ,
map ctrl+shift+, load_config_file


# BEGIN_KITTY_THEME
# Gruvbox Material Dark Hard
include current-theme.conf
# END_KITTY_THEME


# BEGIN_KITTY_FONTS
font_family      family="CommitMono Nerd Font"
bold_font        auto
italic_font      auto
bold_italic_font auto
# END_KITTY_FONTS
